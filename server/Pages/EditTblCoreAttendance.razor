@page "/edit-tbl-core-attendance/{tblCOREAttendance_ID}"
@layout MainLayout
@inherits CoreRadzen.Pages.EditTblCoreAttendanceComponent

@using Radzen
@using Radzen.Blazor
@using CoreRadzen.Models.Core
@using CoreRadzen.Models
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
<RadzenContent Container="main">
  <ChildContent>
    <div class="row">
      <div class="col-md-12">
        <RadzenTemplateForm TItem="CoreRadzen.Models.Core.TblCoreAttendance" Data="@tblcoreattendance" Visible="@(tblcoreattendance != null)" Submit="@Form0Submit">
          <ChildContent>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Text="Tbl Ad User" Component="tblADUser_ID" style="width: 100%">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenDropDown Data="@getTblAdUsersResult" TextProperty="UserName" ValueProperty="tblADUser_ID" Placeholder="Choose TblAdUser" style="display: block; width: 100%" @bind-Value="@(tblcoreattendance.tblADUser_ID)" Name="TblADUser_ID">
                </RadzenDropDown>
                <RadzenRequiredValidator Component="TblADUser_ID" Text="tblADUser_ID is required" style="position: absolute" DefaultValue="0">
                </RadzenRequiredValidator>
              </div>
            </div>
            <div class="row">
              <div class="col offset-sm-3">
                <RadzenButton ButtonType="ButtonType.Submit" Icon="save" Text="Save" ButtonStyle="ButtonStyle.Primary">
                </RadzenButton>
                <RadzenButton ButtonStyle="ButtonStyle.Light" style="margin-left: 1rem" Text="Cancel" Click="@Button2Click">
                </RadzenButton>
              </div>
            </div>
          </ChildContent>
        </RadzenTemplateForm>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
